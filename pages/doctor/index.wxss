@import '../../style/grids.wxss';
@import '../../style/copyright.wxss';

.main{
  width:100%;
  height: 100%;  
  background:url('http://gridpic.tsing-tec.com/92208448e3904934a2a2d0ae2a3e56d5.png') no-repeat;  
  background-color: #ffffff;
}

.personal{
  width: 100%;
  display: inline-block;
}

.headimg{
  width:6rem;
  height: 6rem;
  display: block;
  border-radius: 50%;  
  margin: 2.5rem auto 0;
  border:0.1875rem #5369fd solid;
}

.nickname{
  display: block;
  margin: 1rem auto 0;
  width: 100%;
  text-align: center;
  font-size: 1.125rem;
	font-weight: normal;
	font-stretch: normal;
	line-height: 1.5;
	letter-spacing: 0px;
	color: #ffffff;
	opacity: 0.8;
}
.des{
  text-align: center;
  font-weight: 400;
  font-size: 1rem;
  line-height: 1.4;
  color: #fff;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
  width: 80%;
  margin: 0 auto;
}
.container {
  padding: 0 0 1rem 0;
}
.grid{
  position: relative;
}

.g1:first-child::before{
  position: absolute;
  content: ' ';
  top: 30px;
  right: 0;
  width: 1px;
  border-right: 1px dashed #ababab;
  color: #ababab;
  bottom: 0;
}
.g1:first-child::after{
  position: absolute;
  content: ' ';
  left: 30px;
  right: 0;
  height: 1px;
  border-bottom: 1px dashed #ababab;
  color: #ababab;
  bottom: 0;
}
.g4:last-child::before{
  position: absolute;
  content: ' ';
  bottom: 30px;
  left: -1px;
  width: 1px;
  border-left: 1px dashed #ababab;
  color: #ababab;
  top: 0;
}
.g4:last-child::after{
  position: absolute;
  content: ' ';
  right: 30px;
  left: -1px;
  height: 1px;
  border-top: 1px dashed #ababab;
  color: #ababab;
  top: -1px;
}

